{
    "name": "your-vendor/ucp-checkout-for-woocommerce",
    "description": "UCP Checkout for WooCommerce - Enable AI agents to purchase from your store via UCP",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "woocommerce",
        "ucp",
        "universal-commerce-protocol",
        "ai-commerce",
        "ai-agents",
        "checkout",
        "ecommerce",
        "chatgpt",
        "claude",
        "gemini"
    ],
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "UcpCheckout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-browser": "^4.0",
        "rector/rector": "^2.3",
        "phpstan/phpstan": "^2.1",
        "php-stubs/wordpress-stubs": "*",
        "php-stubs/woocommerce-stubs": "*",
        "phpstan/extension-installer": "*",
        "szepeviktor/phpstan-wordpress": "*"
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "rector": "./vendor/bin/rector process",
        "phpstan": "./vendor/bin/phpstan analyse src tests",
        "polish": [
            "@test",
            "@rector",
            "@phpstan"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
